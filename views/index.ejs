<!-- CONTACT -->
<section class="section-contact">
	<h2 id="contact" class="heading-secondary">Contact Me</h2>
	<div class="row">
		<div class="container">
			<div class="contact">
				<div class="contact__form">
					<form id="contact-form" action="/" method="POST" class="form">
						<div class="form__group">
							<input type="text" class="form__input" placeholder="Full Name" id="name" name="name" required>
							<label for="name" class="form__label">Full Name</label>
						</div>
						<div class="form__group">
							<input type="email" class="form__input" placeholder="Email" id="email" name="email" required>
							<label for="email" class="form__label">Email</label>
						</div>

						<div class="form__heading">
							<h3 class="heading-tertiary-light">Receive pricing for</h3>
						</div>
						<div class="form__group">
							<div class="form__check-group">
								<input type="checkbox" class="form__check-input" id="website" name="website">
								<label for="website" class="form__check-label">
									<span class="form__check-button"></span>
									Development &amp; Design
								</label>
							</div>

							<div class="form__check-group">
								<input type="checkbox" class="form__check-input" id="marketing" name="marketing">
								<label for="marketing" class="form__check-label">
									<span class="form__check-button"></span>
									Marketing Package
								</label>
							</div>
						</div>

						<div class="form__group">
							<textarea name="message" id="message" class="form__message" placeholder="Company info / request work / comments..."></textarea>
						</div>

						<div class="form__group form__submit">
							<button type="submit" class="form__button">Send</button>
						</div>
						<div class="alert">Message has been sent</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</section>
